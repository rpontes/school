<h1><%= t("title.courses.index") %></h1>

<div class="row">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t("course.name") %></th>
      <th><%= t("course.disciplines") %></th>
      <th><%= t("actions.title") %></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td>
            <ul class="unstyled">
              <% for discipline in course.disciplines %>
                <li>
                  <%= discipline.name %>
                </li>
              <% end %>
            </ul>
        </td>
        <td><%= link_to t("actions.edit"), edit_course_path(course), :class => 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
  <%= link_to t("title.courses.new"), new_course_path, :class => 'btn btn-primary' %>
</div>
