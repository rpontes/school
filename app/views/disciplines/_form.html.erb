<%= form_for @discipline, :html => { :class => 'form-inline' } do |f| %>

<fieldset>
  <% if @discipline.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @discipline.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, t("discipline.name"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <br />

  <div class="actions">
    <%= f.submit t("form.submit"), :class => 'btn' %>
    <%= link_to t("actions.back"), disciplines_path, :class => 'btn btn-primary' %>
  </div>

</fieldset>

<% end %>
