<%= form_for @student, :html => { :class => 'form-inline' } do |f| %>

<fieldset>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :registry, t("student.registry"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :registry, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, t("student.name"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :course_id, t("form.course.label") %>
    <%= f.collection_select :course_id, @courses, :id, :name, :prompt => t("course.prompt_field") %>
  </div>

  <br />
  <div class="actions">
    <%= f.submit t("form.submit"), :class => 'btn' %>
    <%= link_to t("actions.back"), students_path, :class => 'btn btn-primary' %>
  </div>
</fieldset>

<% end %>
