<h1><%= t("title.students.index") %></h1>

<div class="row">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t("student.registry") %></th>
      <th><%= t("student.name") %></th>
      <th><%= t("student.course") %></th>
      <th><%= t("actions.title") %></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.registry %></td>
        <td><%= student.name %></td>
        <td><%= student.course.name %></td>
        <td><%= link_to t("actions.edit"), edit_student_path(student), :class => 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
  <%= link_to t("title.students.new"), new_student_path, :class => 'btn btn-primary' %>
</div>
